# AgentComponents Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# FREE AI API KEYS
# ============================================================================

# Hugging Face (Free tier: 1000 requests/month)
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=hf_your_token_here

# Google Gemini (Free tier: 15 requests/minute, 100/day)
# Get from: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic Claude (Optional - $5 free credit)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================================
# DATABASE CONFIGURATION (SUPABASE)
# ============================================================================

# Supabase Configuration (Free tier: 500MB database, 2GB bandwidth)
# Get from: https://supabase.com/dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_role_key_here

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Admin Password (Change this!)
ADMIN_PASSWORD=AgentComponents2024!

# Session Secret (Generate a random string)
SESSION_SECRET=your_random_session_secret_here

# ============================================================================
# EMAIL CONFIGURATION (FOR ALERTS)
# ============================================================================

# Gmail SMTP Configuration
# Use App Password, not regular password
# Get app password: https://support.google.com/accounts/answer/185833
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_16_character_app_password

# Admin email for alerts
ADMIN_EMAIL=admin@agentcomponents.com

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment
ENVIRONMENT=development  # development, staging, production

# Rate Limiting
MAX_REQUESTS_PER_HOUR=10
MAX_REQUESTS_PER_DAY=50

# API Usage Limits (daily)
GEMINI_DAILY_LIMIT=100
HUGGINGFACE_DAILY_LIMIT=30
ANTHROPIC_DAILY_LIMIT=10

# Content Safety
ENABLE_CONTENT_FILTERING=true
ENABLE_PROFANITY_FILTER=true

# Monitoring
ENABLE_EMAIL_ALERTS=true
ALERT_THRESHOLD_API_USAGE=0.8  # Alert at 80% of daily limit
ALERT_THRESHOLD_FAILED_LOGINS=5
SEND_DAILY_REPORTS=true

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable features
ENABLE_LIVE_RESEARCH=true
ENABLE_USER_FEEDBACK=true
ENABLE_ANALYTICS=true
ENABLE_ADMIN_DASHBOARD=true

# Debug settings
DEBUG_MODE=false
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# ============================================================================
# BACKUP CONFIGURATION (OPTIONAL)
# ============================================================================

# Backup settings for fallback storage
ENABLE_FILE_BACKUP=true
BACKUP_RETENTION_DAYS=30
